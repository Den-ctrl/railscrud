<div class="p-4">
  <p class="text-green-500"><%= notice %></p>

  <%= render @library %>

  <div class="flex justify-between items-center mb-4">
    <div class="btn-group" role="group">
      <% if can? [:update, :create, :delete], @library %>
        <%= link_to edit_library_path(@library), class: "btn btn-success mr-2" do %>
          <i class="bi bi-pencil"></i> Edit this library
        <% end %>

        <%= button_to @library, method: :delete, class: "btn btn-danger mr-2", data: { confirm: 'Are you sure?' } do %>
          <i class="bi bi-trash"></i> Destroy this library
        <% end %>
      <% end %>
    </div>

    <%= link_to libraries_path, class: "btn btn-secondary" do %>
      <i class="bi bi-arrow-left"></i> Back to library
    <% end %>
  </div>
</div>


