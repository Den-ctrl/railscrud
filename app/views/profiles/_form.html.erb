<%= form_with(model: profile) do |form| %>
  <% if profile.errors.any? %>
    <div class="text-red-500">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
        <% profile.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="mb-4 grid grid-cols-3 gap-4">
    <div>
      <%= form.label :first_name, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :first_name, class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div>
      <%= form.label :middle_name, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :middle_name, class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div>
      <%= form.label :last_name, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :last_name, class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
  </div>

  <div class="mb-4 grid grid-cols-1 gap-4">
    <div>
      <%= form.label :suffix, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :suffix, class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
  </div>

   <div class="mb-4 grid grid-cols-3 gap-4">
    <div>
      <%= form.label :birthday, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.date_field :birthday, class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

     <div>
      <%= form.label :address, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :address, class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

     <div>
      <%= form.label :contact_number, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.number_field :contact_number, class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
  </div>




  <div>
    <%= form.submit "Submit", class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>

