<div class="max-w-md mx-auto h-screen flex justify-center items-center">
  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <h2 class="text-2xl font-semibold mb-4">Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mb-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4 grid grid-cols-1 gap-4">
        <div>
          <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>
      </div>

      <div class="mb-4 grid grid-cols-2 gap-4">
        <div>
          <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2"%>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "6 characters minimum", class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div>
          <%= f.label :password_confirmation, class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>
      </div>

      <div class="mb-4 grid grid-cols-3 gap-4">
        <%= f.fields_for :profile do |p| %>
          <div>
            <%= p.label :first_name, class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= p.text_field :first_name, class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>

          <div>
            <%= p.label :middle_name, class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= p.text_field :middle_name, class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>

          <div>
            <%= p.label :last_name, class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= p.text_field :last_name, class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
        <% end %>
      </div>

      <div class="mb-4 grid grid-cols-1 gap-4">
        <%= f.fields_for :profile do |p| %>
          <div>
            <%= p.label :suffix, class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= p.text_field :suffix, class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
        <% end %>
      </div>

      <div class="mb-4 grid grid-cols-2 gap-4">
        <%= f.fields_for :profile do |p| %>
          <div>
            <%= p.label :birthday, class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= p.text_field :birthday, class: "birthday-select appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline",
              data: {
                controller: "flatpickr",
              }  
            %>
          </div>
           <div>
            <%= p.label :contact_number, class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= p.number_field :contact_number, class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
        <% end %>
      </div>

      <div class="mb-4 grid grid-cols-1 gap-4">
        <%= f.fields_for :profile do |p| %>
          <div>
            <%= p.label :address, class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= p.text_field :address, class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
        <% end %>
      </div>

      <div class="flex items-center justify-between">
        <%= f.submit "Sign up", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
