<%= form_with(model: schedule) do |form| %>
  <% if schedule.errors.any? %>
    <div class="text-red-500">
      <h2><%= pluralize(schedule.errors.count, "error") %> prohibited this schedule from being saved:</h2>

      <ul>
        <% schedule.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :subscription_id, class: "block text-gray-700" %>
    <%= form.collection_select :subscription_id, Subscription.all, :id, :id, include_blank: false, class: "border rounded py-2 px-3 focus:outline-none focus:shadow-outline"  %>
  </div>

  <div class="mb-4">
    <%= form.label :event, class: "block text-gray-700" %>
    <%= form.text_field :event, class: "border rounded py-2 px-3 focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :start_date, class: "block text-gray-700" %>
    <%= form.datetime_field :start_date, class: "date-select border rounded py-2 px-3 focus:outline-none focus:shadow-outline",
      data: {
        controller: "flatpickr",
      } 
    %>
  </div>

  <div class="mb-4">
    <%= form.label :end_date, class: "block text-gray-700" %>
    <%= form.text_field :end_date, class: "date-select border rounded py-2 px-3 focus:outline-none focus:shadow-outline",     
      data: {
        controller: "flatpickr",
      } 
    %>
  </div>

  <div>
    <%= form.submit "Submit", class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>
